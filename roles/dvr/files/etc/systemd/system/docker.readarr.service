[Unit]
Description=Readarr on Docker
Requires=docker.service docker.prowlarr.service docker.nzbget.service mnt-readarr-downloads.mount mnt-readarr-library.mount

[Service]
User=readarr
Group=readarr
Restart=always
ExecStart=/usr/bin/docker-compose -f /srv/docker/readarr/docker-compose.yml up
ExecStop=/usr/bin/docker-compose -f /srv/docker/readarr/docker-compose.yml down

[Install]
WantedBy=default.target
